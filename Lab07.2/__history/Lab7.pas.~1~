unit Lab7;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Label1: TLabel;
    Button1: TButton;
    Edit2: TEdit;
    Label2: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  i, t, j:integer;
  ss, rs:string;
begin

  ss := Edit1.Text;
  SetLength(rs, length(ss));

  for i := 0 to length(ss) do
    for j := 97 to 122 do
      begin
        if ord(ss[i]) = j then
          rs[i] := ss[i];
      end;


  Edit2.Text := rs;


end.
